@{
    Layout = "~/views/shared/_WebLayout.cshtml";
}
@{ 
    string room = "RoomRes";
    string venue = "VenueRes";
    string cottage = "CottageRes";
} @using PeninsulaHotelAndResortBookingSystem.Infrastructure.Security;

<section>
    <div class="container">
        <div class="jumbotron-fluid col-12 py-2">
            <div class=" row py-2">
                <div class="card rounded text-white col-xl-4 mx-auto   bg-primary mb-3" style="max-width: 20rem;">
                    <h2 class=" badge-pill badge badge-light ">Cottage</h2>

                    <div class=" text-white container">
                        <p>"Lorem ipsum dolor sit amet, consectetur adipiscing elit,</p>
                    </div>

                    <a href="#" onclick="openDate('@cottage')" type="button" class="btn btn-primary btn-outline-info">Book a Cottage</a>
                </div>
                <div class="card rounded text-white col-xl-4 mx-auto bg-primary mb-3" style="max-width: 20rem;">
                    <h2 class=" badge-pill badge badge-light">Venue</h2>

                    <div class="container text-white">
                        <p>"Lorem ipsum dolor sit amet, consectetur adipiscing elit,@{var user = this.User;  @user.GetFullName() }</p>
                    </div>

                    <a href="#" onclick="openDate('@venue')" type="button" class="btn btn-primary btn-outline-info">>Book a Venue</a>
                </div>
                <div class="card rounded col-xl-4 text-white mx-auto bg-primary mb-3" style="max-width: 20rem;">
                    <h2 class=" badge-pill badge badge-light">Room</h2>

                    <div class="container text-white">
                        <p>"Lorem ipsum dolor sit amet, consectetur adipiscing elit,</p>
                    </div>

                    <a href="#" onclick="openDate('@room')" type="button" class="btn btn-primary btn-outline-info">Book a Room</a>
                </div>
            </div>
        </div>
    </div>
</section>


@section datePick
{
    <div class="modal fade" tabindex="-1" role="dialog" id="selectDate">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Select Date</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body justify-content-center">
                    <form>
                        <div class="row">
                            <div class=" form-group mx-auto">
                                <h4>Arrival</h4>
                                <input type="date" id="startDate" />
                            </div>
                            <div class="form-group col-5 mx-auto">
                                <h4>Departure</h4>
                                <input type="date" id="endDate" />
                            </div>
                        </div>
                        <div class="row justify-content-center ">
                            
                                    <div class="col-3 ml-auto">
                                        <a href="#" onclick="nextPage()" type="button" class="btn btn-primary">Next</a>
                                    </div>
                             
                                    <div class=" col-3 mr-auto">
                                        <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
                                    </div>

                        </div>
                    </form>
                </div>                 
            </div>
        </div>
    </div>



                <script>
                    var baseUrl = location.protocol + '//' + location.host + location.pathname;
                    var bookPage;
                    function nextPage()
                    {
                        arrival = new Date;
                        arrival = $("#startDate").val();
                        departure = new Date;
                        departure = $("#endDate").val();
                        window.location = baseUrl + "/" + bookPage + "?dateArr=" + arrival + "&dateDep=" + departure;
                    }
                    function openDate(fType) {
                        bookPage = fType;
                        $("#selectDate").modal("show");
                    }
                </script>
}










































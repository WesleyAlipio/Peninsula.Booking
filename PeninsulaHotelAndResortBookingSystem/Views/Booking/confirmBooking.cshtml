@using PeninsulaHotelAndResortBookingSystem.Infrastructure.Security;
@{
    foreach (var facility in Model)
    {
        var user = this.User;
        <div class="card mb-3">
            <h3 class="card-header">@facility.Name</h3>
            <div class="card-body">
                <h5 class="card-title">Special title treatment</h5>
                <h6 class="card-subtitle text-muted">Support card subtitle</h6>
            </div>
            <svg xmlns="http://www.w3.org/2000/svg" class="d-block user-select-none" width="100%" height="200" aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice" viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
                <rect width="100%" height="100%" fill="#868e96"></rect>
                <text x="50%" y="50%" fill="#dee2e6" dy=".3em">Image cap</text>
            </svg>
            <div class="card-body">
                <p class="card-text">@facility.Description</p>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-8">
                        <div class="badge-dark">Rates:@facility.Rates</div>
                        <div class="badge-dark">Occupants:@facility.Occupants</div>
                    </div>

                </div>
                <div class="row">
                    <div class="col-8">
                        <div class="badge-dark">Total Amount: @ViewBag.amount</div>
                        <div class="badge-dark">Days In:@ViewBag.bookDays</div>
                    </div>

                </div>
            </div>
            <div class="card-footer text-muted">
                <form method="post" action="~/Booking/NewBook">
                    <div class="form-group">
                        <input type="hidden" id="RentCharges" name="RentCharges" value="@ViewBag.amount">
                        <input type="hidden" id="FacilityID" name="FacilityID" value="@facility.FacilityID">
                        <input type="hidden" id="FacilityType" name="FacilityType" value="@facility.Type">
                        <input type="hidden" id="CheckIn" name="CheckIn" value="@ViewBag.DateIn">
                        <input type="hidden" id="CheckOut" name="CheckOut" value="@ViewBag.DateOut">
                        <button type="submit" value="Book" class="btn btn-success">Confirm Booking</button>
                    </div>
                </form>
            </div>
        </div>
    }
}